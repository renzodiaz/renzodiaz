<div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
  <h2 class="mb-5 text-center text-2xl/9 font-bold tracking-tight text-stone-800">Welcome back! Renzo</h2>
  <p class="text-stone-600 mb-2">Sign in into your account</p>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "space-y-6"}) do |f| %>
    <div>
      <%= f.label :email, class: "block text-sm/6 font-medium text-gray-900" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6" %>
    </div>

    <div class="mb-0">
      <div class="flex items-center justify-between">
        <%= f.label :password, class: "block text-sm/6 font-medium text-gray-900" %>
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <div class="text-sm">
            <%= link_to "Forgot your password?", new_password_path(resource_name), class: "font-semibold text-indigo-600 hover:text-indigo-500" %>
          </div>
        <% end %>
      </div>
      <div>
        <%= f.password_field :password, autocomplete: "current-password", class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6" %>
      </div>
    </div>

    <% if devise_mapping.rememberable? %>
      <div>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: "text-sm/6 font-medium text-gray-900" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: "flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm/6 font-semibold text-white shadow-xs hover:bg-indigo-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
    </div>
  <% end %>
</div>
