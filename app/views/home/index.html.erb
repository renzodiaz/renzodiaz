<section class="about-section">
  <div class="container">
    <div class="about-section__wrapper">
      <h2>Career Timeline</h2>
      <ul class="timeline" data-controller="timeline">
        <% @job_histories.each do |job| %>
          <li class="timeline__item">
            <span><%= job.start_date.strftime("%Y") %></span>
            <div class="card" data-timeline-target="box">
              <figure>
                <% if job.cover.attached? %>
                  <%= image_tag job.cover %>
                <% else %>
                  <img src="https://placehold.co/380x200" alt="Solven" />
                <% end %>
                <figcaption>
                  <h3 class="card__title font-semibold"><%= job.job_title %> at - <a href="<%= job.website_url %>" class="text-red"><%= job.company_name %></a></h3>
                  <p><%= job.description %></p>
                  <button type="button">See my duties:</button>
                </figcaption>
              </figure>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</section>
