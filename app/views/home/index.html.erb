<section class="about-section" id="about-section">
  <div class="container">
    <div class="about-section__wrapper">
      <h2>Career Timeline</h2>
      <ul class="timeline" data-controller="timeline">
        <% @job_histories.each do |job| %>
          <li class="timeline__item"> 
            <span class="circle"><%= job.start_date&.strftime("%Y") %></span>
            <div class="card" data-timeline-target="box">
              <% if job.is_current %>
                <span class="current">Current</span>
              <% end %>
              <figure>
                <% if job.cover.attached? %>
                  <%= image_tag job.cover %>
                <% else %>
                  <img src="https://placehold.co/380x200" alt="Solven" />
                <% end %>
                <figcaption>
                  <hgroup>
                    <h3 class="card__title font-semibold"><%= job.job_title %> at - <a href="<%= job.website_url %>" class="text-red"><%= job.company_name %></a></h3>
                    <h4 class="card__subtitle font-semibold"><%= job.location %></h4>
                  </hgroup>
                  <%= link_to "See more", "#", data: {
                    action: "click->modal#open",
                    modal_url: job_history_path(job, format: :html),
                    modal_title: "Job description",
                  }, class: "see-more" %>
                </figcaption>
              </figure>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</section>
