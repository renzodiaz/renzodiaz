<tr id="<%= dom_id(job_history) %>">
  <td class="py-4 pr-3 pl-4 text-sm font-medium whitespace-nowrap text-gray-900 sm:pl-0"><%= job_history.company_name %></td>
  <td class="px-3 py-4 text-sm whitespace-nowrap text-gray-500"><%= job_history.job_title %></td>
  <td class="px-3 py-4 text-sm whitespace-nowrap text-gray-500"><%= job_history.start_date&.strftime("%Y") %></td>
  <td class="px-3 py-4 text-sm whitespace-nowrap text-gray-500"><%= job_history.is_current ? 'Current' : job_history.end_date&.strftime("%Y") %></td>
  <td class="relative py-4 pr-4 pl-3 text-right text-sm font-medium whitespace-nowrap sm:pr-0">
    <%= link_to "Edit", "#", data: {
      action: "click->drawer#open",
      drawer_url: edit_dashboard_job_history_path(job_history),
      drawer_title: "Update Job",
      drawer_description: "Update job history to your experience",
      turbo_frame: "drawer_frame"
    },
    class: "text-indigo-600 hover:text-indigo-900" %>
  <%= button_to "Delete", dashboard_job_history_path(job_history), method: :delete, data: {turbo_confirm: "Are you sure?", turbo_stream: true }, 
    class: "text-red-600 hover:text-red-800"%>
  </td>
</tr>

